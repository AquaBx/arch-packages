# Maintainer: Bjorn Andersson <bjorn.andersson@linaro.org>
pkgname=qmic
pkgver=1.0
pkgrel=1
pkgdesc="Qualcomm QMI IDL compiler (unofficial)"
arch=('armv7h' 'aarch64')
url="https://github.com/andersson/qmic"
license=('BSD')
groups=()
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('git+https://github.com/andersson/qmic.git')
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	make DESTDIR="$pkgdir" install
}
