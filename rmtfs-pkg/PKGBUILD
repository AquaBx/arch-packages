# Maintainer: Bjorn Andersson <bjorn.andersson@linaro.org>
pkgname=rmtfs
pkgver=1.0
pkgrel=1
pkgdesc="Qualcomm Remote Filesystem service"
arch=('armv7h' 'aarch64')
url="https://github.com/andersson/rmtfs"
license=('BSD')
groups=()
makedepends=('git' 'qmic')
checkdepends=()
optdepends=()
depends=('qrtr')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('git+https://github.com/andersson/rmtfs.git#commit=44fcb2ec647ba4e56ab4d3ebea42f08aa71677f5')
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	make DESTDIR="$pkgdir/" prefix="/usr" install
}
