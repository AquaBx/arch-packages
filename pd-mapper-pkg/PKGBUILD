# Maintainer: Bjorn Andersson <bjorn.andersson@linaro.org>
pkgname=pd-mapper
pkgver=1.0
pkgrel=1
pkgdesc="Qualcomm PD mapper service"
arch=('armv7h' 'aarch64')
url="https://github.com/andersson/pd-mapper"
license=('BSD')
groups=()
makedepends=('git' 'qmic')
checkdepends=()
optdepends=()
depends=('qrtr')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=('git+https://github.com/andersson/pd-mapper.git')
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	make DESTDIR="$pkgdir/" prefix="/usr" install
}
